/* pages/bookRoom/bookRoom.wxss */

page {
  height: 100%;
}

.container {
  height: 100%;
}

.hotelBanner {
  width: 100%;
  height: 300rpx;
}

.hotelImg {
  width: 100%;
  height: 300rpx;
  filter: brightness(0.75);
}

.hotelName {
  position: absolute;
  font-size: 35rpx;
  top: 195rpx;
  color: white;
  left: 20rpx;
}

.hotelInfo {
  display: flex;
  font-size: 23rpx;
  position: absolute;
  top: 250rpx;
  color: white;
  left: 20rpx;
}

.hotelFeature {
  margin-left: 20rpx;
  border: solid 1rpx white;
  padding: 0 10rpx;
}

.navigation {
  display: flex;
  justify-content: space-between;
  width: 100%;
  border-bottom: solid #f0f0f0 20rpx;
}

.address {
  padding: 15rpx 20rpx;
  font-size: 28rpx;
}

.alias {
  color: #a2a2a2;
}

.toNavigationButton {
  display: flex;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #2abeaf;
  align-items: center;
}

.jumpButton {
  height: 25rpx;
  width: 25rpx;
  margin-left: 10rpx;
}

.chooseDate {
  display: flex;
  justify-content: space-between;
  width: 100%;
  align-items: center;
  border-bottom: solid 3rpx #f0f0f0;
}

.showDate {
  display: flex;
  font-size: 25rpx;
  color: #a2a2a2;
  padding: 15rpx 20rpx;
  white-space: nowrap;
}

.checkInDate {
  display: flex;
  padding-right: 40rpx;
}

.checkOutDate {
  display: flex;
}

.date {
  font-size: 30rpx;
  color: black;
  margin: 0 3rpx;
  display: flex;
  align-items: flex-end;
}

.howLong {
  font-size: 26rpx;
  color: #2abeaf;
  margin-right: 20rpx;
  white-space: nowrap;
}

.roomList {
  display: flex;
  flex-direction: column;
  width: 100%;
  border-bottom: solid #f0f0f0 20rpx;
}

.room {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1rpx #f0f0f0;
}

.bookInfo {
  display: flex;
  flex-direction: column;
  padding: 15rpx 25rpx;
  font-size: 26rpx;
  color: #a2a2a2;
}

.roomType {
  font-size: 35rpx;
  color: black;
}

.roomInfo {
  display: flex;
  margin: 5rpx 0;
}

.area {
  padding-right: 10rpx;
  border-right: solid 1rpx #a2a2a2;
}

.bedType {
  padding: 0 10rpx;
  border-right: solid 1rpx #a2a2a2;
}

.window {
  padding: 0 10rpx;
  border-right: solid 1rpx #a2a2a2;
}

.breakfast {
  padding-left: 10rpx;
  color: #6db7f1;
}

.cancelRule {
  color: #7cc659;
}

.price {
  display: flex;
  margin-top: 15rpx;
  align-items: flex-end;
}

.realPrice {
  color: #fb501d;
  font-size: 40rpx;
  margin: 0 10rpx;
}

.bookButton {
  margin-right: 25rpx;
  border: solid 4rpx #ff9e05;
  border-radius: 10rpx;
  width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book {
  font-size: 30rpx;
  width: 100%;
  text-align: center;
  background-color: #ff9e05;
  height: 50rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.payType {
  font-size: 25rpx;
  color: #fb501d;
}

.hotelDetail {
  display: flex;
  width: 100%;
  justify-content: space-between;
  border-bottom: solid #f0f0f0 20rpx;
}

.detailList {
  display: flex;
  padding: 20rpx;
}

.detail {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 35rpx;
  letter-spacing: 1rpx;
}

.detailImg {
  height: 30rpx;
  width: 30rpx;
}

.detailText {
  font-size: 20rpx;
  color: #999;
}

.toHotelDetail {
  display: flex;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #2abeaf;
  align-items: center;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.roomDetail {
  width: 100%;
  height: 840rpx;
  overflow: hidden;
  position: fixed;
  left: 0;
  z-index: 1001;
  background: #fff;
  bottom: 0rpx;
  display: flex;
  flex-direction: column;
}

.roomDetail-roomType {
  padding: 20rpx;
  font-size: 35rpx;
  font-weight: 800;
  background-color: #fafafa;
  height: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.roomDetail-return {
  position: absolute;
  height: 40rpx;
  width: 40rpx;
  right: 10px;
  top: 20rpx;
}

.roomDetailInfo {
  height: 80%;
}

.roomImg {
  width: 100%;
  height: 500rpx;
}

.albumNum {
  z-index: 1001;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  color: white;
  padding: 0rpx 25rpx;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 25rpx;
}

.bookRoom {
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 10%;
}

.roomPrice {
  width: 50%;
  display: flex;
  background-color: #fafafa;
  color: #2db9a9;
  justify-content: center;
  align-items: center;
  font-weight: 900;
}

.roomPrice-price {
  font-size: 50rpx;
  margin-right: 20rpx;
}

.roomPrice-discount {
  font-size: 20rpx;
  color: #fe9900;
  border: solid 3rpx #fe9900;
  border-radius: 7rpx;
  padding: 0 2rpx;
  font-weight: 400;
}

.roomDetail-bookButton {
  width: 50%;
  background-color: #fe9900;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}

.roomDetail-roomInfoList {
  display: flex;
  flex-wrap: wrap;
  border-bottom: solid 1rpx #f0f0f0;
  padding: 10rpx;
}

.roomDetail-roomInfo {
  min-width: 50%;
  display: flex;
  padding: 5rpx 0;
}

.info-name {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #a2a2a2;
}

.info-value {
  padding-left: 25rpx;
  font-size: 30rpx;
}

.showMore {
  display: flex;
  margin: 15rpx 0;
}

.showMoreText {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #2db9a9;
}

.showMoreImg {
  width: 35rpx;
  height: 35rpx;
  margin-left: 10rpx;
}

.chooseDateBack {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.toChooseDate {
  width: 100%;
  height: 840rpx;
  overflow: hidden;
  position: fixed;
  left: 0;
  z-index: 1001;
  background: #fff;
  bottom: 0rpx;
  display: flex;
  flex-direction: column;
}

.calendar {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fafafa;
  height: 100%;
}

.week {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #f5f5f5;
  width: 100%;
  height: 60rpx;
  font-size: 25rpx;
}

.month {
  display: flex;
  flex-direction: column;
  width: 100%;
  border: solid #ebebeb 2rpx;
  margin-bottom: 10px;
  background-color: white;
}

.ym {
  font-size: 30rpx;
  white-space: nowrap;
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.days {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}

.day {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 10%;
}

.finishChoose {
  bottom: 0;
  width: 100%;
  background-color: white;
  height: 175rpx;
  border-top: solid #ebebeb 1rpx;
  display: flex;
  align-items: center;
}

.roomDetailInfoBox {
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  border-bottom: solid 1rpx #f0f0f0;
}

.roomDetailInfoContent {
  display: flex;
  justify-content: flex-start;
  margin-top: 20rpx;
}

.refundImg {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.refundText {
  width: 94%;
}

.chooseDateTitle {
  background-color: #f5f5f5;
  text-align: center;
  font-size: 35rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel2 {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 15rpx;
  left: 15rpx;
}

.canBookNum {
  font-size: 30rpx;
  width: 120rpx;
  display: flex;
  justify-content: center;
  color: #d47674;
  margin-bottom: 10rpx;
}
