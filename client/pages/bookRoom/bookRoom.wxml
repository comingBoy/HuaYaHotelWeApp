<!--pages/bookRoom/bookRoom.wxml-->
<view class='container'>

  <!--酒店横幅、点击进入酒店相册-->
  <view class='hotelBanner'>

    <!--酒店图片-->
    <image class='hotelImg' src='../../images/hotelBanner.jpg' mode='aspectFill' bindtap='previewHotelAlbum'>
    </image>

    <!--酒店名称-->
    <view class='hotelName'>
      华亚大酒店
    </view>

    <!--酒店信息-->
    <view class='hotelInfo'>
      <!--酒店装修时间-->
      <view class='decorationTime'>
        2014年装修
      </view>
      <!--酒店特征-->
      <view class='hotelFeature'>
        亲子酒店
      </view>
      <view class='hotelFeature'>
        商务出行
      </view>
    </view>
    <!--相册数量-->
    <view>
    </view>
  </view>

  <!--导航功能-->
  <view class='navigation'>

    <!--地址-->
    <view class='address'>
      <view class='detailAddress'>
        明光市体育路133号
      </view>
      <view class='alias'>
        体育馆
      </view>
    </view>
    <!--跳转到地图导航-->
    <view class='toNavigationButton'>
      <view class='buttonName'>
        地图/导航
      </view>
      <image src='../../images/jump.png' class='jumpButton'>
      </image>
    </view>
  </view>

  <!--选择入住日期-->
  <view class='chooseDate' bindtap='toChooseDate'>
    <view class='showDate'>
      <view class='checkInDate'>
        <view style='display:flex;align-items:flex-end;'>
          入住
        </view>
        <view class='date'>
          {{bookDate.checkInDate.month}}月{{bookDate.checkInDate.day}}日
        </view>
        <view style='display:flex;align-items:flex-end;'>
          {{bookDate.checkInDate.whatDay}}
        </view>
      </view>
      <view class='checkOutDate'>
        <view style='display:flex;align-items:flex-end;'>
          离店
        </view>
        <view class='date'>
          {{bookDate.checkOutDate.month}}月{{bookDate.checkOutDate.day}}日
        </view>
        <view style='display:flex;align-items:flex-end;'>
          {{bookDate.checkOutDate.whatDay}}
        </view>
      </view>
    </view>
    <view class='howLong'>
      共{{bookDate.manyDays}}晚
    </view>
  </view>

  <!--房间列表-->
  <view class='roomList'>
    <view class='room' wx:for='{{roomList}}'>
      <!--预定信息-->
      <view class='bookInfo'>
        <!--房型-->
        <view class='roomType'>
          {{item.roomType}}
        </view>
        <!--房间信息-->
        <view class='roomInfo'>
          <view class='area'>
            {{item.area}}
          </view>
          <view class='bedType'>
            {{item.bedType}}
          </view>
          <view class='window'>
            {{item.window}}
          </view>
          <view class='breakfast'>
            {{item.breakfast}}
          </view>
        </view>
        <!--取消规则-->
        <view class='cancelRule'>
          入住当天18点前免费取消
        </view>
        <!--价格-->
        <view class='price'>
          <!--真实价格-->
          <view style='color:#FB501D'>￥</view>
          <view class='realPrice'>
            150
          </view>
          <!--优惠方式-->
          <view class='discontType'>
            160减10
          </view>
        </view>
      </view>
      <!--预定按钮-->
      <view class='bookButton'>
        <view class='book'>预订</view>
        <view class='payType'>
          在线付
        </view>
      </view>
    </view>
  </view>
</view>