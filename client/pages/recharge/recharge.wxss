/* pages/recharge/recharge.wxss */

page {
  height: 100%;
  border-top: solid 1rpx #cdcdcd;
  background-color: #f6f6f6;
}

.recharge {
  background: white;
  width: 90%;
  margin-top: 40rpx;
  height: 250rpx;
  font-size: 30rpx;
  color: #858585;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.rechargeTitle {
  margin: 40rpx;
}

.rechargeAmountBox {
  display: flex;
  margin-left: 40rpx;
  font-size: 40rpx;
  color: black;
  align-items: center;
  margin-bottom: 40rpx;
  font-weight: 900;
}

.rechargeAmount {
  font-size: 90rpx;
  height: 90rpx;
}

.comfirmRecharge {
  width: 90%;
  background-color: #28acb0;
  color: white;
  margin-top: 50rpx;
  font-size: 35rpx;
}
